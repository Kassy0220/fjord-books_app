<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :icon %>
  <%= image_tag resource.icon.variant(resize: "100x100") if resource.icon.attached? && resource.icon.variable? %><br />
  <%= f.file_field :icon, accept: 'image/jpeg, image/png, image/gif' %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>
