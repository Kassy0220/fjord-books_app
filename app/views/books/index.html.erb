<p id="notice"><%= notice %></p>

<h1><%= t('view.common.title_index', name: @books.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name('title') %></th>
      <th><%= Book.human_attribute_name('memo') %></th>
      <th><%= Book.human_attribute_name('author') %></th>
      <th><%= Book.human_attribute_name('picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('view.button.show'), book %></td>
        <td><%= link_to t('view.button.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('view.button.destroy'), book, method: :delete, data: { confirm: t('form.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.button.new'), new_book_path %>
